@model SolterraActivities.Models.ViewModels.ActivityNew

@{
    ViewData["Title"] = "New Activity";
}

<h1>New Activity</h1>

<form method="POST" asp-action="Add">
    <div class="form-group">
        <label for="ActivityName"><strong>Activity Name:</strong></label>
        <input type="text" name="ActivityName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="HobbyId"><strong>Hobby:</strong></label>
        <select name="HobbyId" class="form-control">
            @foreach (var hobby in Model.HobbyOptions)
            {
                <option value="@hobby.HobbyId">@hobby.HobbyName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ActivityDate"><strong>Date:</strong></label>
        <input type="date" name="ActivityDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ActivityLocation"><strong>Location:</strong></label>
        <input type="text" name="ActivityLocation" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DurationinHours"><strong>Duration (hours):</strong></label>
        <input type="number" step="0.1" name="DurationinHours" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ActivityCost"><strong>Cost ($):</strong></label>
        <input type="number" step="0.01" name="ActivityCost" class="form-control" />
    </div>

    <h4>Add Moods</h4>
    <div id="moodContainer">
        <div class="mood-entry">
            <select name="moodId" class="form-control">
                @foreach (var mood in Model.MoodOptions)
                {
                    <option value="@mood.MoodId">@mood.MoodName</option>
                }
            </select>
            <label for="BeforeIntensity">Intensity Before:</label>
            <input type="number" name="BeforeIntensity" min="0" max="10" style="width: 50px;" />

            <label for="AfterIntensity">Intensity After:</label>
            <input type="number" name="AfterIntensity" min="0" max="10" style="width: 50px;" />
        </div>
    </div>

    <br />

    <input type="submit" value="Create Activity" class="btn btn-primary" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
