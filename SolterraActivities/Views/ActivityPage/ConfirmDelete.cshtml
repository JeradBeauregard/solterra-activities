@model SolterraActivities.Models.ActivityDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Delete</h1>

<p>Are you sure you want to delete this Activity?</p>
<p><strong>@Model.ActivityName</strong> - @Model.ActivityDate.ToShortDateString()</p>

<form asp-action="Delete" asp-route-id="@Model.ActivityId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
