

@{
	@model IEnumerable<Pet>;

}

<h1>Pets</h1>
<p>This page containts a list of pets belonging to all users. This page is intended for admin manipulation of pet data.</p>

<div class="d-flex justify-content-between align-items-center mb-4">
	<h3 class="mb-0">Actions</h3>
	<div>
		<a href="/PetPage/New" class="btn btn-success me-2">➕ Create New Pet</a>
		<a href="/" class="btn btn-secondary">🏠 Back to Home</a>
	</div>
<ul>
@foreach ( var pet in Model){
	<li>@pet.Name <a href="/UserPage/Details/@pet.UserId">@pet.UserId</a> <a href="/PetPage/Details/@pet.Id">Details</a></li>
}
</ul>

