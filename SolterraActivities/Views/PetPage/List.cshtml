@model IEnumerable<Pet>

<div class="container mt-4">
    <h1 class="mb-2">Pets</h1>
    <p class="text-muted">This page contains a list of pets belonging to all users. It is intended for admin manipulation of pet data.</p>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Actions</h3>
        <div>
            <a href="/PetPage/New" class="btn btn-success me-2">➕ Create New Pet</a>
            <a href="/" class="btn btn-secondary">🏠 Back to Home</a>
        </div>
    </div>

    <ul class="list-group">
        @foreach (var pet in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@pet.Name</strong>
                    <span class="text-muted"> (User: <a href="/UserPage/Details/@pet.UserId">@pet.UserId</a>)</span>
                </div>
                <div>
                    <a href="/PetPage/Details/@pet.Id" class="btn btn-sm btn-primary">Details</a>
                </div>
            </li>
        }
    </ul>
</div>
