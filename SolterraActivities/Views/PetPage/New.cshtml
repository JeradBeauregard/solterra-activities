@model SolterraActivities.Models.ViewModels.PetViewModels.PetNew

@{
    var pet = Model;
}

<div class="container mt-5">
    <h1 class="mb-4">Create a New Pet</h1>

    <form id="newpetadmin" method="POST" action="/PetPage/Create">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="petName" class="form-label">Name</label>
                <input type="text" id="petName" name="name" class="form-control" required>
            </div>

            <div class="col-md-6 mb-3">
                <label for="userId" class="form-label">User ID</label>
                <select id="userId" name="userId" class="form-select" required>
                    <option value="">Select User</option>
                    @foreach (var user in pet.Users)
                    {
                        <option value="@user.Id">@user.Username</option>
                    }
                </select>
            </div>

            <div class="col-md-6 mb-3">
                <label for="petSpecies" class="form-label">Species</label>
                <select id="petSpecies" name="species_id" class="form-select" required>
                    <option value="">Select Species</option>
                    @foreach (var species in pet.Species)
                    {
                        <option value="@species.Id">@species.Name</option>
                    }
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label for="petLevel" class="form-label">Level</label>
                <input type="number" id="petLevel" name="level" class="form-control" required>
            </div>

            <div class="col-md-4 mb-3">
                <label for="petHealth" class="form-label">Health</label>
                <input type="number" id="petHealth" name="health" class="form-control" required>
            </div>

            <div class="col-md-4 mb-3">
                <label for="petStrength" class="form-label">Strength</label>
                <input type="number" id="petStrength" name="strength" class="form-control" required>
            </div>

            <div class="col-md-4 mb-3">
                <label for="petAgility" class="form-label">Agility</label>
                <input type="number" id="petAgility" name="agility" class="form-control" required>
            </div>

            <div class="col-md-4 mb-3">
                <label for="petIntelligence" class="form-label">Intelligence</label>
                <input type="number" id="petIntelligence" name="intelligence" class="form-control" required>
            </div>

            <div class="col-md-4 mb-3">
                <label for="petDefence" class="form-label">Defence</label>
                <input type="number" id="petDefence" name="defence" class="form-control" required>
            </div>

            <div class="col-md-12 mb-4">
                <label for="petHunger" class="form-label">Hunger: <span id="hungerValue">50</span></label>
                <input type="range" id="petHunger" name="hunger" class="form-range" min="0" max="100" value="50"
                       oninput="document.getElementById('hungerValue').innerText = this.value">
            </div>

            <div class="col-md-8 mb-3">
                <label for="petMood" class="form-label">Mood</label>
                <select id="petMood" name="mood" class="form-select" required>
                    <option value="">Select Mood</option>
                    @foreach (var mood in pet.Moods)
                    {
                        <option value="@mood.MoodName">@mood.MoodName</option>
                    }
                </select>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Create Pet</button>
        </div>
    </form>
</div>
