@model SolterraActivities.Models.ViewModels.MoodDetails

@{
    ViewData["Title"] = "Mood Details";
}

<h1>@Model.Mood.MoodName</h1>

<h3>Statistics</h3>
<ul>
    <li>Total Activities: @Model.Mood.MoodActivityCount</li>
</ul>

<h3>Activitys Associated with This Mood</h3>
<ul>
    @foreach (var activity in Model.RelatedActivities)
    {
        <li>
            <p>@activity.ActivityDate.ToString("MMMM dd, yyyy") - <a href="/ActivityPage/Details/@activity.ActivityId">@activity.ActivityName</a></p>
        </li>
    }
</ul>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Mood.MoodId" class="btn btn-warning">Edit</a>
    <a asp-action="ConfirmDelete" asp-route-id="@Model.Mood.MoodId" class="btn btn-danger">Delete</a>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>
