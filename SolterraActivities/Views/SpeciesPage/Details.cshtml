@model Species

@{
    var species = Model;
}

<div class="container mt-4">
    <h1 class="mb-4">Species Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <p><strong>ID:</strong> @species.Id</p>
            <p><strong>Name:</strong> @species.Name</p>
        </div>
    </div>

    <div class="mt-4">
        <a href="/SpeciesPage/List" class="btn btn-secondary">🔙 Back to Species List</a>
        <a href="/SpeciesPage/Edit/@species.Id" class="btn btn-warning ms-2">✏️ Edit</a>
		<a href="/SpeciesPage/ConfirmDelete/@species.Id" class="btn btn-danger ms-2">🗑️ Delete</a>
    </div>
</div>
