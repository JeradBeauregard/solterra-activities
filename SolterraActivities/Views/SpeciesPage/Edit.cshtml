@model Species

@{
    var species = Model;
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Species: <span class="text-primary">@species.Name</span></h1>

    <form method="post" action="/SpeciesPage/Update/@species.Id">
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" id="name" name="name" class="form-control" value="@species.Name" required>
        </div>

        <button type="submit" class="btn btn-primary">💾 Save Changes</button>
        <a href="/SpeciesPage/Details/@species.Id" class="btn btn-secondary ms-2">🔙 Back to Details</a>
    </form>
</div>
