@model Species

@{
    var species = Model;
}

<div class="container mt-5">
    <h1 class="text-danger mb-3">Delete Species: @species.Name</h1>

    <p class="lead">Are you sure you want to delete this species?</p>
    <p class="text-danger fw-bold">⚠️ This action cannot be undone.</p>

    <form method="post" action="/SpeciesPage/Delete/@species.Id">
        <div class="d-flex justify-content-center gap-3 mt-4">
            <button type="submit" class="btn btn-danger">🗑️ Yes, Delete</button>
            <a href="/SpeciesPage/Details/@species.Id" class="btn btn-secondary">❌ Cancel</a>
        </div>
    </form>
</div>
