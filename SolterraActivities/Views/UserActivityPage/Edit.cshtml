@model SolterraActivities.Models.ViewModels.UserActivityEdit

@{
    ViewData["Title"] = "Edit User Activity";
}

<h2>Edit User Activity</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="UserActivity.UserActivityId" />

    <div class="form-group">
        <label>User</label>
        <select asp-for="UserActivity.UserId" asp-items="Model.AllUsers" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Activity</label>
        <select asp-for="UserActivity.ActivityId" asp-items="Model.AllActivities" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Pet</label>
        <select asp-for="UserActivity.PetId" asp-items="Model.AllPets" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Item Gained</label>
        <select asp-for="UserActivity.ItemId" asp-items="Model.AllItems" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-action="List" class="btn btn-secondary mt-3 ms-2">Cancel</a>
</form>
