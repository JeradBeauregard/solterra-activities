@model SolterraActivities.Models.UserActivityDto

@{
    ViewData["Title"] = "Delete User Activity";
}

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete this user activity?</p>

<ul>
    <li><strong>User:</strong> @Model.Username</li>
    <li><strong>Activity:</strong> @Model.ActivityName</li>
    <li><strong>Pet:</strong> @Model.PetName</li>
    <li><strong>Item Gained:</strong> @Model.ItemGained</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserActivityId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary ms-2">Cancel</a>
</form>
