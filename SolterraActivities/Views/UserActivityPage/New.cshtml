@model SolterraActivities.Models.ViewModels.UserActivityNew

@{
    ViewData["Title"] = "New User Activity";
}

<h2>Log a New Activity</h2>

<form asp-action="Add" method="post" class="mt-4">

    <div class="form-group">
        <label asp-for="UserActivity.UserId" class="control-label">User</label>
        <select asp-for="UserActivity.UserId" asp-items="Model.AllUsers" class="form-control"></select>
        <span asp-validation-for="UserActivity.UserId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="UserActivity.ActivityId" class="control-label">Activity</label>
        <select asp-for="UserActivity.ActivityId" asp-items="Model.AllActivities" class="form-control"></select>
        <span asp-validation-for="UserActivity.ActivityId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="UserActivity.PetId" class="control-label">Pet</label>
        <select asp-for="UserActivity.PetId" asp-items="Model.AllPets" class="form-control"></select>
        <span asp-validation-for="UserActivity.PetId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="UserActivity.ItemId" class="control-label">Item Gained</label>
        <select asp-for="UserActivity.ItemId" asp-items="Model.AllItems" class="form-control"></select>
        <span asp-validation-for="UserActivity.ItemId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Save</button>
    <a asp-action="List" class="btn btn-secondary mt-4 ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
