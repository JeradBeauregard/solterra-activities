@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Solterra CMS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container py-5">
        <h1 class="text-center mb-4">Solterra Content Management System</h1>

        <p class="lead text-center">
            Welcome to the Solterra CMS. Use the sections below to manage items, item types, users, inventory, pets, and more.
        </p>

        <div class="row mt-4">
            <!-- Users -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Users</h5>
                        <p class="card-text">Access user information and manage specific user inventory.</p>
                        <a href="/UserPage/List" class="btn btn-primary">Manage Users</a>
                    </div>
                </div>
            </div>

            <!-- Inventory -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Inventory</h5>
                        <p class="card-text">View inventory for all users. Add, edit, and delete inventory entries.</p>
                        <a href="/InventoryPage/List" class="btn btn-primary">Manage Inventory</a>
                    </div>
                </div>
            </div>

            <!-- Items -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Items</h5>
                        <p class="card-text">Manage items, add or edit items, and link/unlink item types.</p>
                        <a href="/ItemPage/List" class="btn btn-primary">Manage Items</a>
                    </div>
                </div>
            </div>

            <!-- Item Types -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Item Types</h5>
                        <p class="card-text">Manage item types, including adding, editing, and deleting.</p>
                        <a href="/ItemTypePage/List" class="btn btn-primary">Manage Item Types</a>
                    </div>
                </div>
            </div>

            <!-- Pets -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Pets</h5>
                        <p class="card-text">Manage pet data, including appearance and stats.</p>
                        <a href="/PetPage/List" class="btn btn-primary">Manage Pets</a>
                    </div>
                </div>
            </div>

            <!-- Species -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Species</h5>
                        <p class="card-text">Define and edit species that pets can belong to.</p>
                        <a href="/SpeciesPage/List" class="btn btn-primary">Manage Species</a>
                    </div>
                </div>
            </div>

            <!-- Activities -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Activities</h5>
                        <p class="card-text">Add and manage activities pets or users can do.</p>
                        <a href="/ActivityPage/List" class="btn btn-primary">Manage Activities</a>
                    </div>
                </div>
            </div>

            <!-- Moods -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Moods</h5>
                        <p class="card-text">Control the mood system for pets and users.</p>
                        <a href="/MoodPage/List" class="btn btn-primary">Manage Moods</a>
                    </div>
                </div>
            </div>

            <!-- User Activity -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">User Activity</h5>
                        <p class="card-text">Track and manage user interactions and logs.</p>
                        <a href="/UserActivityPage/List" class="btn btn-primary">Manage User Activity</a>
                    </div>
                </div>
            </div>

            <!-- Hobbies -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Hobbies</h5>
                        <p class="card-text">Create and assign hobbies for pets or users.</p>
                        <a href="/HobbyPage/List" class="btn btn-primary">Manage Hobbies</a>
                    </div>
                </div>
            </div>
        </div> <!-- /.row -->
    </div> <!-- /.container -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
